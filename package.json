{
  "name": "video-call-server",
  "version": "1.0.0",
  "description": "Production-ready video calling application with WebRTC, Socket.io and Node.js. Supports multi-user video calls, screen sharing, chat, and recording.",
  "main": "src/app.js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.21.0",
    "serve-favicon": "^2.5.0",
    "socket.io": "^4.7.5",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon --watch \"src/\" --exec \"node src/app.js\"",
    "watch": "nodemon --watch \"src/\" --exec \"node src/app.js\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "build": "echo 'No build step required for Node.js application'",
    "docker:build": "docker build -t video-call-server .",
    "docker:run": "docker run -p 3000:3000 video-call-server",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "logs": "tail -f src/logs/app.log",
    "clean": "rm -rf src/logs/*.log src/uploads/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amirsanni/livestream-server.git"
  },
  "keywords": [
    "video-call",
    "webrtc",
    "socket.io",
    "node.js",
    "express",
    "real-time",
    "video-conferencing",
    "screen-sharing",
    "chat",
    "recording",
    "production-ready"
  ],
  "author": "Amir Sanni <amirsanni@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/amirsanni/livestream-server/issues"
  },
  "homepage": "https://github.com/amirsanni/livestream-server#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/logs/**",
      "!src/uploads/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
