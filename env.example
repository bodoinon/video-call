# Video Call Server Environment Configuration
# Copy this file to .env and modify the values as needed

# Application Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=0.0.0.0

# CORS Configuration
# For production, specify your domain: https://yourdomain.com
# For development, use: *
CORS_ORIGIN=*

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.IO Configuration
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000
SOCKET_MAX_BUFFER_SIZE=1048576

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=src/logs/app.log

# SSL/TLS Configuration (for production with HTTPS)
# SSL_CERT_PATH=/path/to/certificate.pem
# SSL_KEY_PATH=/path/to/private-key.pem

# Database Configuration (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/videocall

# Redis Configuration (for scaling)
# REDIS_URL=redis://localhost:6379

# Monitoring and Health Check
HEALTH_CHECK_INTERVAL=30000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=src/uploads

# Session Configuration
SESSION_SECRET=your-secret-key-change-in-production

# WebRTC Configuration
# ICE_SERVERS=[{"urls":"stun:stun.l.google.com:19302"},{"urls":"stun:stun1.l.google.com:19302"}]

# Room Configuration
MAX_ROOM_SIZE=10
ROOM_TIMEOUT=1800000

# Performance Configuration
CLUSTER_MODE=false
WORKER_PROCESSES=4
